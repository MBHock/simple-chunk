<?xml version="1.0" encoding="utf-8"?>
<job id="batchletjob" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     version="1.0">
    <properties>
        <property name="inputDirectory" value="/Users/mojammalhock/tmp/out"/>
        <property name="outputDirectory" value="/Users/mojammalhock/tmp"/>
        <property name="numberOfThreads" value="10"/>
        <property name="filenamePattern" value="txt"/>
    </properties>
    <step id="chunkReader">
        <chunk item-count="100">
            <reader ref="SimpleFileReader">
                <properties>
                    <property name="fileName"
                              value="#{partitionPlan['fileName']}"/>
                </properties>
            </reader>
            <processor ref="SimpleFileProcessor"/>
            <writer ref="SimpleFileWriter"/>
        </chunk>
        <partition>
            <mapper ref="FilePartitionMapper"/>
        </partition>
    </step>
</job>